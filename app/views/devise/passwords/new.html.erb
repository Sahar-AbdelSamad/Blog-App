<h2 class="title-w80 sign-title">Forgot your password?</h2>

<div class="container">
  <div class="black-border sign-up">
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, "data-turbo": "false"  }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'w-100' %>
      </div>

      <div class="actions">
        <%= f.submit "Send me reset password instructions" %>
      </div>
    <% end %>
  </div>
</div>

<div class="bottom-links">
  <%= render "devise/shared/links" %>
</div>
